<h1>
Edit {{theClient.name}}
</h1>





<form action="/client/update/{{theClient._id}}" method="POST">


    <label for="">Name</label>
    <input type="text" name="name" value="{{theClient.name}}">

    <label for="">Image</label>
    <input type="text" name="image" value="{{theClient.image}}">

    <label for="">Age</label>
    <input type="text" name="age" value="{{theClient.age}}">

    <label for="">Gender</label>
    <input type="text" name="gender" value="{{theClient.gender}}">

    <label for="">Blood Glucose</label>
    <input type="text" name="bloodGlucose" value="{{theClient.bloodGlucose}}">

    <label for="">Insulin</label>
    <input type="text" name="insulin" value="{{theClient.insulin}}">

     <label for="">Next Appointment</label>
    <input type="text" name="nextAppointment" value="{{theClient.nextAppointment}}">

    <label for="">Client Notes</label>
    <input type="text" name="clientNotes" value="{{theClient.clientNotes}}">


    <button>Submit</button>



</form>
