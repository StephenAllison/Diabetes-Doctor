<h1>Client Database</h1>


<form action="/client/create" method="POST" id="form-container">


  <label for="name">Name</label>
  <input id="name" type="text" name="name" placeholder="Name">

   <label for="image">Image</label>
  <input id="image" type="text" name="image" placeholder="image">

  <br><br>
  <label for="age">Age</label>
  <input id="age" type="text" name="age" placeholder="Age">


  <br><br>
  <label for="gender">Gender</label>
  <input id="gender" type="text" name="gender" placeholder="Gender">

  <br><br>
  <label for="bloodGlucose">Blood Glucose Level</label>
  <input id="bloodGlucose" type="text" name="bloodGlucose" placeholder="bloodGlucose">


  <br><br>
  <label for="insulin">Insulin Level</label>
  <input id="insulin" type="insulin" name="insulin" placeholder="insulin">

  <br><br>
  <label for="nextAppointment">Next Appointment</label>
  <input id="nextAppointment" type="nextAppointment" name="nextAppointment" placeholder="nextAppointment">

  <br><br>
  <label for="clientNotes">Client Notes</label>
  <input id="clientNotes" type="clientNotes" name="clientNotes" placeholder="clientNotes"> {{#if message}}
  <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>

  <button>Create Client</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>